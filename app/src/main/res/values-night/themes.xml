<resources>
    <!-- Base application theme. -->
    <style name="Theme.AnlimWeather" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Main color -->
        <item name="colorPrimary">@color/basic_color</item>

        <!-- TextColor -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Widgets color  -->
        <item name="colorSecondary">@color/basic_color</item>

        <!-- StatusBar and NavigationBar -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Start screen theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>

        <!-- StatusBar and NavigationBar -->
        <item name="android:statusBarColor">@color/gray</item>
        <item name="android:navigationBarColor">@color/gray</item>
    </style>
</resources>